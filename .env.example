# ag3tools Environment Configuration
# Copy this file to .env and fill in your API keys

# Smithery Platform API Key
# Get yours at: https://smithery.ai
SMITHERY_API_KEY=your-smithery-api-key-here

# OpenAI API Key (for LLM tools)
# Get yours at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# Exa API Key (optional, for Exa search tools)
# Get yours at: https://exa.ai
EXA_API_KEY=your-exa-api-key-here

# Cache Configuration
AG3TOOLS_CACHE_ENABLED=true
AG3TOOLS_CACHE_TTL=900

# Cost Tracking
AG3TOOLS_TRACK_COSTS=true
AG3TOOLS_COST_LOG_DIR=data/cost_logs

# Default Smithery Profile (optional)
SMITHERY_PROFILE=default
